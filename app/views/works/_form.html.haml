= form_for @work do |f|
  - if @work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work.errors.count, "error")} prohibited this work from being saved:"
      %ul
        - @work.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :progress
    = f.text_field :progress
  .field
    = f.label :date_ini
    = f.date_select :date_ini
  .field
    = f.label :date_end
    = f.date_select :date_end
  .field
    = f.label :service
    = f.text_field :service
  .actions
    = f.submit 'Save'
